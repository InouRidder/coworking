<div class="container py-5">
  <div class="row">
    <div class="col-12 col-sm-6">
      <h1>
        Waiting list
      </h1>
      <ol>
        <% @presenter.waiting_list.each_with_index do |request, index| %>
          <li>
            <%= request.registration.email %>
          </li>
        <% end %>
      </ol>
    </div>
    <div class="col-12 col-sm-6">
      <h1>
        Desks
      </h1>
      <% @presenter.desks.each do |desk| %>
        <div>
          <%= desk.name %>
          is used by
          <%= desk.current_user&.registration&.email %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to 'Add me to the waiting list!', registrations_new_path %>
</div>

